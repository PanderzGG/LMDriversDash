<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="972" d:DesignHeight="820"
             xmlns:vm="clr-namespace:LMDriversDash.ViewModels"
             x:DataType="vm:HomeViewModel"
             x:Class="LMDriversDash.Views.HomeView"
             MinWidth="642"
             HorizontalAlignment="Stretch">
    <Design.DataContext>
        <vm:HomeViewModel/>
    </Design.DataContext>
    
    <Grid Background="{DynamicResource PrimaryBackground}"
          RowDefinitions="Auto, *, Auto"
          ColumnDefinitions="*, *, *, *">
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                HorizontalAlignment="Stretch"
                Background="{DynamicResource InfoCardBackground}"
                BorderBrush="{DynamicResource BorderBrush}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Welcome back "
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MenuActiveText}"/>
                <TextBlock Text="{Binding PlayerName}"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryText}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
