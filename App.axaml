<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LMDriversDash.App"
             xmlns:local="using:LMDriversDash"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyle.axaml"></StyleInclude>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
    </Application.Styles>
             
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/Resources/MultiColorBoxShadow.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        <SolidColorBrush x:Key="PrimaryBackground">#121212</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryText">#CFCFCF</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryMenuBackground">#282828</SolidColorBrush>
        <SolidColorBrush x:Key="MenuHoverBackground">#717171</SolidColorBrush>
        <SolidColorBrush x:Key="MenuActiveText">#78ef3f</SolidColorBrush>
        <SolidColorBrush x:Key="InfoCardBackground">#282828</SolidColorBrush>
        <SolidColorBrush x:Key="InfoCardSecondaryTextPositive">#47d5a6</SolidColorBrush>
        <SolidColorBrush x:Key="InfoCardBackgroundSecondaryColorPositive">#5047d5a6</SolidColorBrush>
        <SolidColorBrush x:Key="InfoCardBorderSecondaryColorPositive">#8047d5a6</SolidColorBrush>
        
        <SolidColorBrush x:Key="LMDDWINS">#47d5a6</SolidColorBrush>
        
        
        <SolidColorBrush x:Key="RacesGreen">#78ef3f</SolidColorBrush>
        <SolidColorBrush x:Key="RacesGreenbg">#3078ef3f</SolidColorBrush>
        <SolidColorBrush x:Key="TrophyTurk">#47d5a6</SolidColorBrush>
        <SolidColorBrush x:Key="TrophyTurkbg">#3047d5a6</SolidColorBrush>
        <SolidColorBrush x:Key="PercentBlue">#3f76cf</SolidColorBrush>
        <SolidColorBrush x:Key="PercentBluebg">#303f76cf</SolidColorBrush>
        <SolidColorBrush x:Key="MedalBronze">#d7ac61</SolidColorBrush>
        <SolidColorBrush x:Key="MedalBronzebg">#30d7ac61</SolidColorBrush>

        
        
        <SolidColorBrush x:Key="BorderBrush">#3f3f3f</SolidColorBrush>
        <SolidColorBrush x:Key="SmallTextColor">#717171</SolidColorBrush>
        <SolidColorBrush x:Key="MenuActiveBackgroundSemiTransparent">#5078ef3f</SolidColorBrush>
        
        <FontFamily x:Key="FunnelMedium">/Assets/Fonts/FunnelSans-Medium.ttf#Funnel Sans Medium</FontFamily>
        <FontFamily x:Key="FunnelBold">/Assets/Fonts/FunnelSans-Bold.ttf#Funnel Sans</FontFamily>
        <FontFamily x:Key="Phosphor">/Assets/Fonts/Phosphor-Bold.ttf#Phosphor-Bold</FontFamily>
    </Application.Resources>
             
</Application>